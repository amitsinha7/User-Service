{
  "name": "user-services",
  "version": "1.0.0",
  "description": "User Micro Service",
  "main": "server.js",
  "scripts": {
    "watch-server": "nodemon --ignore tests/ --watch src -e ts,tsx --exec ts-node src/server.ts",
    "build-ts": "tsc",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "build": "npm run build-ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:coverage": "jest --collect-coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amitsinha7/User-Service.git"
  },
  "author": "Amit Kumar Sinha",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/amitsinha7/User-Service/issues"
  },
  "homepage": "https://github.com/amitsinha7/User-Service#readme",
  "dependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "cls-rtracer": "^2.6.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.30.0",
    "jest": "^27.0.6",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-http-request": "^2.2.1",
    "koa-json": "^2.0.2",
    "koa-json-body": "^5.3.0",
    "koa-json-server": "^0.3.0",
    "koa-router": "^7.2.1",
    "koa2-swagger-ui": "^5.2.0",
    "nodemon": "^2.0.9",
    "pg": "^8.6.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typeorm": "^0.2.34",
    "typescript": "^4.3.5",
    "winston": "^3.3.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@koa/cors": "^3.1.0",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/koa": "^2.13.4",
    "@types/koa__cors": "^3.0.3",
    "@types/koa-bodyparser": "^4.3.2",
    "@types/koa-json": "^2.0.19",
    "@types/koa-router": "^7.4.0",
    "class-validator": "^0.13.1",
    "dotenv": "^8.6.0"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/tests/**/*.+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
