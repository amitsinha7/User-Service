{
  "name": "user-services",
  "version": "1.0.0",
  "description": "User Micro Service",
  "main": "server.js",
  "scripts": {
    "watch-server": "nodemon --ignore tests/ --watch src -e ts,tsx --exec ts-node src/server.ts",
    "build-ts": "tsc",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "build": " npm run build-ts",
    "start": "npm run build-ts && node dist/server.js",
    "test": "mocha -r ts-node/register src/tests/**/*.test.ts",
    "cover": "nyc npm test",
    "testWithCoverage": "nyc -r lcov -e .ts -x \"*.test.ts\" mocha -r ts-node/register src/tests/**/*.test.ts --require src/config/env.ts && nyc report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amitsinha7/User-Service.git"
  },
  "author": "Amit Kumar Sinha",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/amitsinha7/User-Service/issues"
  },
  "homepage": "https://github.com/amitsinha7/User-Service#readme",
  "dependencies": {
    "@hapi/boom": "^9.1.3",
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.0.0",
    "class-validator": "^0.13.1",
    "cls-rtracer": "^2.6.0",
    "dotenv": "^10.0.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-jwt": "^4.0.1",
    "koa-router": "^10.0.0",
    "mocha": "^9.0.2",
    "path": "^0.12.7",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "swagger-injector": "^4.0.1",
    "ts-mockito": "^2.6.1",
    "typeorm": "^0.2.34",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/koa": "^2.13.4",
    "@types/koa__cors": "^3.0.3",
    "@types/koa-bodyparser": "^4.3.2",
    "@types/koa-helmet": "^6.0.4",
    "@types/koa-router": "^7.4.3",
    "@types/mocha": "^8.2.3",
    "@types/node": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "nodemon": "^2.0.9",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "src/**/*.d.ts",
      "node_modules/**/**",
      "dist/**/*",
      "src/tests/**",
      "src/models/**",
      "src/repository/**",
      "src/request/**",
      "src/response/**",
      "src/config/**",
      "src/middleware/**",
      "src/client/**"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "lcov"
    ],
    "all": true
  }
}
