{
  "name": "user-services",
  "version": "1.0.0",
  "description": "User Micro Service",
  "main": "server.js",
  "scripts": {
    "watch-server": "nodemon --ignore tests/ --watch src -e ts,tsx --exec ts-node src/server.ts",
    "build-ts": "tsc",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "build": " npm run build-ts",
    "start": "npm run build-ts && node dist/server.js",
    "test": "jest",
    "test:coverage": "jest --collect-coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amitsinha7/User-Service.git"
  },
  "author": "Amit Kumar Sinha",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/amitsinha7/User-Service/issues"
  },
  "homepage": "https://github.com/amitsinha7/User-Service#readme",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.0.0",
    "class-validator": "^0.13.1",
    "cls-rtracer": "^2.6.0",
    "dotenv": "^10.0.0",
    "fs-extra": "^10.0.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-jwt": "^4.0.1",
    "koa-router": "^10.0.0",
    "path": "^0.12.7",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "swagger-injector": "^4.0.1",
    "typeorm": "^0.2.34",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.12",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/koa": "^2.13.4",
    "@types/koa__cors": "^3.0.3",
    "@types/koa-bodyparser": "^4.3.2",
    "@types/koa-helmet": "^6.0.4",
    "@types/koa-router": "^7.4.3",
    "@types/lodash": "^4.14.171",
    "@types/node": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.9",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/tests/**/*.+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
